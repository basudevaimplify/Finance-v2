# QRT Closure Agent Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection URL
# Format: postgresql://username:password@hostname:port/database?sslmode=require
# 
# Local Example:
# DATABASE_URL="postgresql://qrt_user:your_password@localhost:5432/qrt_closure_db"
# 
# Cloud Database Examples:
# Neon: DATABASE_URL="postgresql://username:password@ep-xyz.us-east-2.aws.neon.tech/neondb?sslmode=require"
# Supabase: DATABASE_URL="postgresql://postgres:password@db.xyz.supabase.co:5432/postgres"
DATABASE_URL="postgresql://username:password@hostname:port/database?sslmode=require"

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# OpenAI API Key (REQUIRED)
# Get from: https://platform.openai.com/api-keys
# Used for document classification, data extraction, and journal entry generation
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Anthropic API Key (OPTIONAL)
# Get from: https://console.anthropic.com/
# Used for advanced conversational AI features
ANTHROPIC_API_KEY="sk-ant-your-anthropic-key-here"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment mode (development, production, test)
NODE_ENV="development"

# Server port (default: 5000)
PORT=5000

# Session secret for JWT tokens (generate a random string)
# You can generate one at: https://www.random.org/strings/
SESSION_SECRET="your-random-session-secret-min-32-characters"

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# File upload configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR="uploads"

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Logging level (error, warn, info, debug)
LOG_LEVEL="info"

# CORS origin (for production)
# CORS_ORIGIN="https://yourdomain.com"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Enable detailed SQL logging (development only)
# DB_LOGGING=true

# Enable debug mode
# DEBUG=true

# Hot reload delay (milliseconds)
# HOT_RELOAD_DELAY=1000